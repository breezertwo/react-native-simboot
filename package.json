{
  "name": "react-native-simboot",
  "version": "0.2.0",
  "description": "A script to spin up any simulator or device with your selected configuration.",
  "repository": {
    "type": "git",
    "url": "https://github.com/breezertwo/react-native-simboot.git"
  },
  "main": "src/index.ts",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "esbuild ./src/index.ts --bundle --outfile=./lib/index.js --platform=node",
    "release": "dotenv release-it --"
  },
  "author": "breezertwo",
  "license": "ISC",
  "dependencies": {
    "enquirer": "^2.3.6",
    "xcparse": "^0.0.3"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/node": "^18.13.0",
    "dotenv-cli": "^5.1.0",
    "esbuild": "^0.16.10",
    "eslint": "^8.27.0",
    "prettier": "^2.7.1",
    "release-it": "^15.5.0",
    "typescript": "^4.9.4"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  }
}
